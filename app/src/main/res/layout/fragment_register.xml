<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    tools:context=".ui.register.RegisterFragment">

    <!-- ================= TITLE ================= -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hisobga kirish"
        android:textSize="24sp"
        android:textColor="@color/pink"
        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing="-0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ================= SUBTITLE ================= -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon raqamingiz orqali davom eting"
        android:textSize="15sp"
        android:textColor="#777777"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ================= LOTTIE ================= -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        app:lottie_rawRes="@raw/welcome"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= PHONE ================= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#DDDDDD"
        app:boxStrokeWidthFocused="2dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:startIconDrawable="@drawable/flag_uz_svg"
        app:startIconTint="@null"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/lottie_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="+998 90 123-45-67"
            android:inputType="phone"
            android:maxLength="19"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================= SMS CODE ================= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirmCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/pink"
        app:boxStrokeWidthFocused="2dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tilPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="SMS kodni kiriting"
            android:gravity="center"
            android:inputType="number"
            android:letterSpacing="0.4"
            android:maxLength="6"
            android:textSize="20sp"
            android:textColor="#111111"
            android:fontFamily="@font/montserrat_bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================= TIMER ================= -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tilConfirmCode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kodni qayta yuborish"
        android:textSize="13sp"
        android:textColor="@color/pink"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:alpha="0.4"
        app:layout_constraintTop_toBottomOf="@id/tilConfirmCode"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= MAIN BUTTON ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAction"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:text="SMS kodni olish"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/button_bg"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilConfirmCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= DIVIDER ================= -->
    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yoki"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= SOCIAL ================= -->
    <LinearLayout
        android:id="@+id/social_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_google"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_google"
            android:background="@drawable/bg_circle_gray"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- ================= TERMS ================= -->
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Davom etish orqali siz Foydalanish shartlari va Maxfiylik siyosatiga rozilik bildirasiz."
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/social_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
