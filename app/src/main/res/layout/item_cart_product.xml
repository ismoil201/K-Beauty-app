<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp">

        <!-- CHECKBOX -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:buttonTint="#222222"
            android:layout_marginTop="6dp"/>

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="88dp"
            android:layout_height="116dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:background="#F3F3F3"/>

        <!-- INFO -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- NAME -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aroma Body Mist (1+1)"
                android:textSize="14sp"
                android:textColor="#111111"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"/>

            <!-- OPTION -->
            <TextView
                android:id="@+id/tvOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pushti · 200ml"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp"/>

            <!-- SHIPPING -->
            <TextView
                android:id="@+id/tvShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bugun jo‘natiladi"
                android:textSize="11sp"
                android:textColor="#1E88E5"
                android:layout_marginTop="6dp"/>

            <!-- QTY + PRICE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <!-- QTY -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="−"
                        android:textSize="18sp"
                        android:background="@drawable/qty_bg"
                        android:gravity="center"
                        android:textColor="#111111"/>

                    <TextView
                        android:id="@+id/tvQty"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#111111"/>

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/qty_plus_bg"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <!-- PRICE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvFinalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99 000 so‘m"
                        android:textSize="15sp"
                        android:textColor="#111111"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:id="@+id/tvOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199 000 so‘m"
                        android:textSize="12sp"
                        android:textColor="#AAAAAA"
                       />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/cancel_svg"
            />
    </LinearLayout>


    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

</LinearLayout>
