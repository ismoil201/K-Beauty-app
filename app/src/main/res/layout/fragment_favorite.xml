<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.FavoriteFragment">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoqtirganlarim"
        android:textSize="20sp"
        android:textColor="#151515"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ITEM COUNT -->
    <TextView
        android:id="@+id/tvItemsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 ta mahsulot"
        android:textSize="14sp"
        android:textColor="#7A7A7A"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- FAVORITES LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvItemsCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SHIMMER LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        tools:listitem="@layout/item_product"
        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvItemsCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvItemsCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/heart_clicked_svg"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hozircha yoqtirilgan mahsulotlar yo‘q"
            android:textSize="16sp"
            android:textColor="#151515"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Yoqtirgan mahsulotlaringiz shu yerda saqlanadi. O‘zingizga yoqqanlarini qo‘shib boring."
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoShopping"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Mahsulotlarni ko‘rish"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            app:cornerRadius="14dp"
            android:textColor="@color/white"
            app:backgroundTint="#000000"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <!-- LOADING -->

</androidx.constraintlayout.widget.ConstraintLayout>
