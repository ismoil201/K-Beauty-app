<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/root"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <!-- ================= USER HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/user_shield_svg"
                android:background="@drawable/bg_circle_gray"
                android:padding="10dp"/>

            <!-- Name + badge -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:text="ismoiljoraxon..."
                        android:textSize="15sp"
                        android:textColor="#111111"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <!-- Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="White"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/butttom_bg1"/>
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvUserEmail"
                    android:text="체형 정보 입력하기"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow_right_svg"/>
        </LinearLayout>

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#EEEEEE"/>

        <!-- ================= STATUS ROW ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <include
                android:id="@+id/order_history"
                layout="@layout/item_profile_order"
                android:layout_width="0dp"
                android:layout_weight="1"
              />

            <include
                android:id="@+id/order_comment"
                android:layout_width="0dp"
                layout="@layout/item_profile_comment"
                android:layout_weight="1"
               />

            <include
                android:id="@+id/coupon"
                android:layout_width="0dp"
                layout="@layout/item_profile_coupon"
                android:layout_weight="1"
              />

            <include
                android:id="@+id/settings"
                android:layout_width="0dp"
                layout="@layout/item_profile_settings"
                android:layout_weight="1"
              />


        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
