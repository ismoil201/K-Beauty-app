<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= HEADER ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Mening sahifam"
            android:textSize="18sp"
            android:textColor="#111111"
            android:fontFamily="@font/montserrat_bold"/>

        <!-- ================= USER INFO (LOGIN) ================= -->
        <include
            android:id="@+id/layoutUserInfo"
            layout="@layout/item_profile_user"
            android:visibility="gone"/>

        <!-- ================= PROMO / GUEST ================= -->
        <LinearLayout
            android:id="@+id/layoutPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A’zolar uchun bepul yetkazib berish"
                android:textSize="18sp"
                android:textColor="#111111"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Hozir ro‘yxatdan o‘ting va 30% gacha chegirma beruvchi 4 ta kupon oling!"
                android:textSize="14sp"
                android:textColor="@color/pink"
                android:fontFamily="@font/montserrat_medium"/>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_register"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Ro‘yxatdan o‘tish"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:backgroundTint="@color/light_pink"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Kirish"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:backgroundTint="#111111"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ================= DIVIDER ================= -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F4F4"/>

        <!-- ================= RECOMMENDED ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Tavsiyalar"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:fontFamily="@font/montserrat_medium"/>

        <include
            android:id="@+id/rowBonus"
            layout="@layout/item_profile_cupon"
            app:icon="@drawable/gift_svg"
            app:title="Kuponlarim"/>

        <!-- ================= DIVIDER ================= -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#EEEEEE"/>

        <!-- ================= HELP ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Yordam va ma’lumot"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:fontFamily="@font/montserrat_medium"/>

        <include
            android:id="@+id/rowSupport"
            layout="@layout/item_profile_support"
            app:icon="@drawable/support_svg"
            app:title="Mijozlar xizmati"/>

        <include
            android:id="@+id/rowAnnouncement"
            layout="@layout/item_profile_notice"
            app:icon="@drawable/notice_svg"
            app:title="E’lonlar"/>

        <include
            android:id="@+id/rowPrivacy"
            layout="@layout/item_profile_user_shield"
            app:icon="@drawable/user_shield_svg"
            app:title="Maxfiylik siyosati"/>

        <include
            android:id="@+id/rowTerms"
            layout="@layout/item_profile_document"
            app:icon="@drawable/paper_document_svg"
            app:title="Foydalanish shartlari"/>

        <include
            android:id="@+id/rowOpenSource"
            layout="@layout/item_profile_code"
            app:icon="@drawable/code_svg"
            app:title="Ochiq kod litsenziyalari"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
</ScrollView>
