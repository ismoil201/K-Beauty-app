<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ================= CONTENT ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ================= SELECT BAR ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <CheckBox
                android:id="@+id/cbSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barchasini tanlash (0/0)"
                android:textSize="14sp"
                android:textColor="#222222" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvDeleteSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanlanganni o‘chirish"
                android:textSize="13sp"
                android:textColor="#111111"
                android:padding="8dp" />
        </LinearLayout>

        <!-- ================= SELLER ================= -->
        <TextView
            android:id="@+id/tvSellerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Sotuvchi: Body Holic"
            android:textSize="16sp"
            android:textColor="#111111"
            android:fontFamily="@font/montserrat_bold"
            android:padding="12dp" />

        <!-- ================= SHIMMER ================= -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvShimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/item_product_shimmer" />

        <!-- ================= CART ITEMS ================= -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderProducts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_cart_product" />

        <!-- ================= EMPTY CART ================= -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="24dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/empty_cart_svg"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Savat hozircha bo‘sh"
                android:textSize="18sp"
                android:textColor="#111111"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mahsulotlarni tanlab savatingizga qo‘shing"
                android:textSize="14sp"
                android:textColor="#777777"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoShopping"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Mahsulotlarni ko‘rish"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/pink"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- ================= BOTTOM BAR ================= -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/pink"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 so‘m"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyurtma berish"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="12dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
