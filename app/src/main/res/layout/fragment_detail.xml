<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- IMAGE -->
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:contentDescription="product image"/>

            <!-- BRAND -->
            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="다슈"
                android:textSize="13sp"
                android:textColor="#9E9E9E"
                android:fontFamily="@font/montserrat_medium"/>

            <!-- NAME -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:text="맨즈 멀티 커버 스틱 파운데이션 (3color)"
                android:textSize="16sp"
                android:textColor="#111111"
                android:fontFamily="@font/montserrat_semibold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- PRICE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSkidka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35%"
                    android:textColor="#FF3B30"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="24,800원"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_bold"/>
            </LinearLayout>

            <!-- RATING -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_svg"
                    android:contentDescription="rating"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.9 · 리뷰 904"
                    android:textSize="13sp"
                    android:textColor="#FF9800"
                    android:fontFamily="@font/montserrat_medium"/>
            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#EEEEEE"/>

            <!-- SHORT INFO -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="옵션 선택 후 구매 가능합니다."
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="@font/montserrat_regular"/>

            <!-- SIMILAR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="O'xshash mahsulotlar"
                android:textSize="16sp"
                android:textColor="#111"
                android:fontFamily="@font/montserrat_semibold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:listitem="@layout/item_product"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FIXED BOTTOM BAR -->
    <!-- FIXED BOTTOM BAR -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- LIKE -->
        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart_svg"
            android:padding="6dp"
            android:contentDescription="like"/>

        <!-- ADD TO CART -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="장바구니 담기"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/button_outline_gray"/>

        <!-- BUY -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="구매하기"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/button_bg"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
